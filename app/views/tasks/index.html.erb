<h1>タスク一覧</h1>
<p><%=notice%></p>
<div class="search">
  <%= form_with(url: search_tasks_path,local: true, method: :get,scope: :task) do |form| %>
    <div class="task_name">
      <%=form.label :task_name%>
      <%=form.text_field :task_name%>
    </div>
    <div class="task_status">
      <%=form.label :status%>
      <%= form.select :status,["未着手","着手中","完了"],include_blank: true %>
    </div>
    <div class="task_limit">
      <%=form.label :limit%>
      <%= form.select :limit_select,["なし","昇順","降順"],include_blank: true%>
    </div>
    <%= form.submit "検索" %>
  <% end %>
</div>
<table>
  <tr>
    <th>タスク名</th>
    <th>内容</th>
    <th>日付</th>
    <th>終了期限</th>
    <th>ステータス</th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="task_all">
    <td><%= task.task_name %></td>
    <td><%= task.task_content %></td>
    <td><%= l task.created_at, format: :short %></td>
    <td><%= l task.limit, format: :long %></td>
    <td><%= task.status %></td>
    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to "タスクを編集する", edit_task_path(task.id) %></td>
    <td><%= link_to "タスクを削除する", task_path(task.id), method: :delete,data: { confirm: '本当に削除していいですか？' }  %></td>
  </tr>
<% end %>
</table>
<%=link_to "タスク作成",new_task_path%>