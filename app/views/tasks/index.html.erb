<h1>タスク一覧</h1>
<p><%=notice%></p>
<table>
  <tr>
    <th>タスク名</th>
    <th>内容</th>
    <th>日付</th>
    <th><%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %></th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="task_all">
    <td><%= task.task_name %></td>
    <td><%= task.task_content %></td>
    <td><%= l task.created_at, format: :short %></td>
    <td><%= l task.limit, format: :long %></td>
    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to "タスクを編集する", edit_task_path(task.id) %></td>
    <td><%= link_to "タスクを削除する", task_path(task.id), method: :delete,data: { confirm: '本当に削除していいですか？' }  %></td>
  </tr>
<% end %>
</table>
<%=link_to "タスク作成",new_task_path%>