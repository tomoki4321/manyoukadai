<div class="content">
  <h1>ユーザー管理画面</h1>
  <p><%= notice %></p>
  <%= link_to 'ユーザーを登録する', new_admin_user_path, class: 'btn btn-primary mb-3'%>

  <table class="table list">
    <tr>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>タスク数</th>
      <th>管理権限</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
    <% @users.each do |user| %>
      <tr class="task_all">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin %></td>
        <td><%= link_to '詳細', admin_user_path(user), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to '編集', edit_admin_user_path(user), class: "btn btn-outline-success btn-sm" %></td>
        <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '削除してよろしいですか？' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
    <% end %>
  </table>
</div>
<style>
h1{
  text-align:center;
}
td{
  text-align:center;
}
th{
  text-align:center;
}
</style>