<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "個エラー") %> があります。 <%= @user.name %> </h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, "名前"%>
    <%= f.text_field :name,  placeholder: "名前" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "メールアドレス"%>
    <%= f.email_field :email, placeholder: "メールアドレス"%>
  </div>
  <div class="form-group">
    <%= f.label :admin, "管理者権限"%>
    <%= f.select :admin, ["true","false"], {}%>　true:付与、false:付与しない
  </div>
  <div class="form-group">
    <%= f.label :password, "パスワード"%>
    <%= f.password_field :password, placeholder: "パスワード"%>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード確認"%>
    <%= f.password_field :password_confirmation, placeholder: "パスワード確認"%>
  </div>
  <%= f.submit%>
<% end %>

